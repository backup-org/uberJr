create table usertable(
  userId int,
  email text,
  hashedPassword text,
  driver boolean,
  PRIMARY KEY(userId)
)

create table driver(
  userId int,
  licensePlate text,
  carColor text,
  carModel text,
  activelyDriving boolean,
  PRIMARY KEY(userId)
)

create table location(
  userId int,
  longitude float,
  latitude float,
  lastUpdatedTime timestamp,
  PRIMARY KEY(userId)
)

create table rides(
  riderUserId int,
  driverUserId int,
  pickUpAddress text,
  duration int,
  PRIMARY KEY(riderUserId)
)
